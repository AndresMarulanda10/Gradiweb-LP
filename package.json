{
  "name": "shopify-simulator",
  "version": "1.0.0",
  "description": "Shopify simulator template",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:webpack\"",
    "dev:server": "nodemon server.js",
    "dev:webpack": "webpack --mode development --watch",
    "build": "NODE_ENV=production webpack --mode production",
    "build:analyze": "NODE_ENV=production webpack-bundle-analyzer public/main.js",
    "clean": "rm -rf public/*.js public/*.css public/*.map"
  },
  "keywords": [
    "shopify",
    "javascript",
    "liquid"
  ],
  "author": "miguelgradi",
  "license": "ISC",
  "dependencies": {
    "express": "^4.21.2",
    "liquidjs": "^10.20.1"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "autoprefixer": "^10.4.16",
    "babel-loader": "^9.1.3",
    "clean-webpack-plugin": "^4.0.0",
    "concurrently": "^8.2.2",
    "css-loader": "^6.8.1",
    "css-minimizer-webpack-plugin": "^5.0.1",
    "cssnano": "^6.0.1",
    "gsap": "^3.13.0",
    "mini-css-extract-plugin": "^2.7.6",
    "nodemon": "^3.0.1",
    "postcss": "^8.4.31",
    "postcss-loader": "^7.3.3",
    "sass": "^1.69.0",
    "sass-loader": "^13.3.2",
    "style-loader": "^3.3.3",
    "terser-webpack-plugin": "^5.3.9",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4"
  }
}
